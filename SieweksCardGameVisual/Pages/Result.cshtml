@page
@model SieweksCardGameVisual.Pages.ResultModel
@{
}

<div class="movedown"></div>
<h2 class="textcolor">@Model.Message</h2>
<h3 class="textcolor"> My Hand</h3>
<p1 class="textcolor">
    @foreach (var item in Model.hand1)
    {
        try
        {
            <img src="@item.imagepath" width="125" height="182" />
        }
        catch { }
    }
</p1>
<div class="movedown"></div>
<h3 class="textcolor">Opponents hand</h3>
<p1 class="textcolor">
    @foreach (var item in Model.hand2)
    {
        try
        {
            <img src="@item.imagepath" width="125" height="182" />
        }
        catch { }
    }
</p1>
<div class="text-center">
    <p1 class="textcolor">
        Your Current Money: @Model.balance
    </p1>
</div>
<div class="marginbottom">
    <form method="post" class="text-center">
        <input type="text" hidden value="quick" name="action" />
        <input class="btn-dark" value="Next Round" type="submit" />
    </form>
</div>
<div class="text-center">
<p1 class="textcolor">
    @try{@Model.Message2}
    catch{}
</p1>
</div>
<div class="marginbottom">
    <form method="post" class="text-center">
        <input type="text" hidden value="back" name="action" />
        <input class="btn-dark" value="Back to Menu" type="submit" />
    </form>
</div>
